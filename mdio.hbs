namespace eval vhdl::mdio {
  proc src {} {
    hbs::SetLib "mdio"
    hbs::AddFile mdio.vhd
  }

  proc tb {} {
    hbs::SetTool "nvc"
    hbs::AddPostElabCb hbs::SetArgsPrefix "--messages=compact"
    src

    hbs::SetLib ""
    hbs::AddFile tb.vhd
    hbs::SetTop "tb"
    hbs::Run
  }

  hbs::Register
}